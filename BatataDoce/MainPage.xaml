<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatataDoce.MainPage"
             Shell.NavBarIsVisible="false"
             BackgroundColor="#00001c">

   <Grid>

        <Image Source="inicio.jpg"
                Aspect="AspectFit"
                VerticalOptions="Start"
                Margin="0,60,0,0"/>

        <Button Text="Inicio"
                FontFamily="Rogerio"
                Clicked="QuandoClicarNoBotao"
                Margin="0,200,0,0"
                HeightRequest="60"
                BackgroundColor="#1b6689"/>

        <Button Text="Sobre"
                FontFamily="Rogerio"
                Clicked="QuandoClicarNoBotaoSobre"
                Margin="0,350,0,0"
                HeightRequest="60"
                BackgroundColor="#1f374c"/>

        <Button Text="Créditos"
                FontFamily="Rogerio"
                Clicked="QuandoClicarNoBotao"
                Margin="0,500,0,0"
                HeightRequest="60"
                BackgroundColor="#1f374c"/>

        <Frame x:Name="Sobre"
                IsVisible="false"
                BackgroundColor="#000027">

        <Grid>

        <Image Source="sobre.jpg"
                Aspect="AspectFit"
                VerticalOptions="Start"
                Margin="0,30,0,0"/>

        <Label Text="Em uma noite de lua cheia, uma pequena vila medieval se torna vitima do ataque de um lobisomem. Agora o seu papel, como um caçador de monstros que foi contratado pela vila, é investigar os ataques e solucionar este misterio. Para que todos possam dormir em paz."
                FontFamily="Rogerio"
                TextColor="White"
                VerticalOptions="Start"
                Margin="0,375,0,0"/>

        <Button Text="Voltar"
                FontFamily="Rogerio"
                Clicked="QuandoClicarNoBotaoVoltar"
                Margin="0,500,0,0"
                HeightRequest="60"
                BackgroundColor="#1b6689"/>

        </Grid>

        </Frame>


   </Grid>


</ContentPage>
